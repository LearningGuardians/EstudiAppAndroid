<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="#03A9F4"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:title="EstudiApp"
        app:titleTextColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="345dp"
        android:layout_height="237dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="33dp"
        android:backgroundTint="#090909"
        android:divider="@drawable/empty_divider"
        android:elevation="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="109dp"
            android:layout_height="232dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            app:strokeColor="#554F4F"
            app:strokeWidth="2dp" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:translationY="55dp"
                app:srcCompat="@drawable/espa_ol" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="EspaÃ±ol"
                android:translationX="25dp"
                android:translationY="20dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="96dp"
                android:layout_height="62dp"
                android:fontFamily="monospace"
                android:text="Se revisa todos los temas de bachillerato de esta asignatura"
                android:textSize="10sp"
                android:translationX="8dp"
                android:translationY="150dp" />
        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="109dp"
            android:layout_height="232dp"
            app:strokeColor="#554F4F"
            app:strokeWidth="2dp" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:translationY="55dp"
                app:srcCompat="@drawable/matematicas" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Matematicas"
                android:translationX="8dp"
                android:translationY="20dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Se revisa todos los temas de bachillerato de esta asignatura"
                android:textSize="10sp"
                android:translationX="8dp"
                android:translationY="150dp" />
        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/divider2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="109dp"
            android:layout_height="230dp"
            app:cardElevation="10dp"
            app:strokeColor="#554F4F"
            app:strokeWidth="2dp" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:translationY="55dp"
                app:srcCompat="@drawable/ingles" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Ingles"
                android:translationX="30dp"
                android:translationY="20dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Se revisa todos los temas de bachillerato de esta asignatura"
                android:textSize="10sp"
                android:translationX="8dp"
                android:translationY="150dp" />
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="47dp"
        android:fontFamily="monospace"
        android:text="Escoge la materia que quieres reforzar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <Button
        android:id="@+id/hourButton"
        android:onClick="timePick"
        android:layout_width="177dp"
        android:layout_height="67dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="117dp"
        android:backgroundTint="@android:color/white"
        android:elevation="1dp"
        android:text="Seleccionar Hora
"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="monospace"
        android:text="Selecciona tu hora de llegada del colegio"
        app:layout_constraintBottom_toTopOf="@+id/hourButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>