<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanEstudio_Create">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="1234dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#03A9F4"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:title="EstudiApp"
            app:titleTextColor="#FFFFFF" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="345dp"
            android:layout_height="237dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="33dp"
            android:backgroundTint="#090909"
            android:divider="@drawable/empty_divider"
            android:elevation="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/spanishCard"
                android:layout_width="109dp"
                android:layout_height="232dp"
                android:checkable="true"
                android:elevation="10dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="10dp"
                app:strokeColor="@color/border_selector"
                app:strokeWidth="2dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    android:translationY="55dp"
                    app:srcCompat="@drawable/espa_ol" />

                <TextView
                    android:id="@+id/spanishTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Español"
                    android:translationX="25dp"
                    android:translationY="20dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="96dp"
                    android:layout_height="62dp"
                    android:fontFamily="monospace"
                    android:text="Se revisa todos los temas de bachillerato de esta asignatura"
                    android:textSize="10sp"
                    android:translationX="8dp"
                    android:translationY="150dp" />
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matematicasCard"
                android:layout_width="109dp"
                android:layout_height="232dp"
                android:checkable="true"
                app:strokeColor="@color/border_selector"
                app:strokeWidth="2dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    android:translationY="55dp"
                    app:srcCompat="@drawable/matematicas" />

                <TextView
                    android:id="@+id/mathTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Matematicas"
                    android:translationX="8dp"
                    android:translationY="20dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Se revisa todos los temas de bachillerato de esta asignatura"
                    android:textSize="10sp"
                    android:translationX="8dp"
                    android:translationY="150dp" />
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/divider2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/inglesCard"
                android:layout_width="109dp"
                android:layout_height="230dp"
                android:checkable="true"
                app:cardElevation="10dp"
                app:strokeColor="@color/border_selector"
                app:strokeWidth="2dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    android:translationY="55dp"
                    app:srcCompat="@drawable/ingles" />

                <TextView
                    android:id="@+id/englishTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Ingles"
                    android:translationX="30dp"
                    android:translationY="20dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Se revisa todos los temas de bachillerato de esta asignatura"
                    android:textSize="10sp"
                    android:translationX="8dp"
                    android:translationY="150dp" />
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="47dp"
            android:fontFamily="monospace"
            android:text="Escoge la materia que quieres reforzar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

        <Button
            android:id="@+id/hourButton"
            android:layout_width="177dp"
            android:layout_height="67dp"
            android:layout_marginStart="117dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="117dp"
            android:backgroundTint="@android:color/white"
            android:elevation="1dp"
            android:onClick="timePick"
            android:text="HORA DE LLEGADA"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="monospace"
            android:text="Selecciona tu hora de llegada del colegio"
            app:layout_constraintBottom_toTopOf="@+id/hourButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <EditText
            android:id="@+id/idPlanEstudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="101dp"
            android:autoText="true"
            android:editable="true"
            android:elevation="0dp"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Ejemplo: Estudio 1"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#7E7373"
            android:textColorHint="#C1BBBB"
            android:typeface="monospace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hourButton" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="97dp"
            android:fontFamily="monospace"
            android:text="Nombre del plan de estudio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hourButton" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="49dp"
            android:fontFamily="monospace"
            android:text="Selecciona hora para empezar el estudio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idPlanEstudio" />

        <Button
            android:id="@+id/startTimeButton"
            android:layout_width="177dp"
            android:layout_height="67dp"
            android:layout_marginStart="117dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="117dp"
            android:backgroundTint="@android:color/white"
            android:elevation="1dp"
            android:onClick="timePick2"
            android:text="HORA DE COMIENZO"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="13dp"
            android:backgroundTint="@android:color/background_light"
            android:fontFamily="monospace"
            android:text="Razón por la que usas el plan de estudio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startTimeButton" />


        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="100dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="CREAR PLAN DE ESTUDIOS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="428dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="75dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/refuerzoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:checkable="true"
                android:clickable="true"
                android:onClick="checkableReason"
                android:text="Refuerzo"
                app:strokeColor="@color/border_selector"
                app:strokeWidth="2dp" />


            <View
                android:id="@+id/divider4"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/evaluacionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:onClick="checkableReason"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="Evaluación"
                app:strokeColor="@color/border_selector"
                app:strokeWidth="2dp"/>

            <View
                android:id="@+id/divider5"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/quizButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginRight="40dp"
                android:clickable="true"
                android:onClick="checkableReason"
                app:strokeColor="@color/border_selector"
                app:strokeWidth="2dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="Quiz" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

